{
  "private": true,
  "author": "Preact Authors <core@preactjs.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:lambda\"",
    "dev:client": "preact watch --no-refresh",
    "dev:lambda": "netlify-lambda serve src/lambda",
    "start": "npm run -s server",
    "prestart": "npm run -s build",
    "server": "superstatic build -p ${PORT:-8080} --host 0.0.0.0 --compression -c '{\"headers\":[{\"source\":\"**\",\"headers\":[{\"key\":\"Cache-Control\",\"value\":\"max-age=31536000\"}]}]}'",
    "build": "netlify-lambda build src/lambda && preact build --prerenderUrls src/prerender.js --inline-css false",
    "prebuild": "rimraf build/assets && rimraf build/content",
    "lint": "eslint src test",
    "format": "prettier --write \"{src,test}/**/*.{css,js,json}\"",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "eslintConfig": {
    "extends": "developit",
    "rules": {
      "react/sort-comp": 0,
      "react/no-danger": 0,
      "brace-style": 0,
      "indent": 0,
      "lines-around-comment": 0,
      "no-prototype-builtins": 0
    },
    "globals": {
      "PRERENDER": true,
      "__non_webpack_require__": true,
      "ga": true,
      "globalThis": true
    },
    "settings": {
      "react": {
        "version": "16.8"
      }
    }
  },
  "eslintIgnore": [
    "prism.js",
    "**/*.d.ts"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": true,
    "tabWidth": 2
  },
  "lint-staged": {
    "{src,test}/**/*.{css,js,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/polyfill": "^7.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^6.8.0",
    "eslint-config-developit": "^1.1.1",
    "feed": "^4.2.2",
    "husky": "^8.0.3",
    "jsdom": "^15.2.1",
    "lint-staged": "^15.2.0",
    "netlify-lambda": "^2.0.16",
    "patch-package": "^8.0.0",
    "postcss-custom-properties": "^13.3.2",
    "postcss-import": "^14.0.0",
    "postcss-nesting": "^12.0.1",
    "preact-cli": "^4.0.0-next.6",
    "prettier": "^1.19.1",
    "promise-polyfill": "^8.1.3",
    "rimraf": "^5.0.5",
    "superstatic": "^9.0.3"
  },
  "dependencies": {
    "@docsearch/react": "^3.6.0",
    "@preact/signals": "^1.1.3",
    "@preact/signals-core": "^1.2.3",
    "@rollup/browser": "^3.18.0",
    "babel-standalone": "^6.26.0",
    "codemirror": "^5.50.2",
    "comlink": "^4.4.1",
    "decko": "^1.2.0",
    "htm": "^3.1.1",
    "linkstate": "^1.1.1",
    "magic-string": "^0.25.7",
    "marked": "^0.8.0",
    "preact": "10.15.1",
    "preact-custom-element": "^4.3.0",
    "preact-iso": "2.2.0",
    "preact-markup": "^2.1.1",
    "preact-render-to-string": "^5.2.6",
    "rollup": "^2.79.1",
    "sucrase": "^3.32.0",
    "yaml": "^1.7.2"
  }
}
